<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_padrao"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/solveit_azul_primario"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- BOTÃO DE VOLTAR (OPCIONAL, CONTROLE VIA JAVA) -->
        <ImageButton
            android:id="@+id/btn_voltar_toolbar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Voltar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:visibility="gone" /> <!-- Começa invisível -->

        <!-- TÍTULO DA TOOLBAR -->
        <TextView
            android:id="@+id/titulo_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Seu Perfil"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- ÍCONES À DIREITA (SE NECESSÁRIO) -->
        <LinearLayout
            android:id="@+id/container_icones_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <!--
            =============================================================
            AQUI ESTÁ A CORREÇÃO: A LINHA 'style' FOI REMOVIDA E OS
            ATRIBUTOS FORAM COLOCADOS DIRETAMENTE NOS BOTÕES.
            =============================================================
            -->

            <!-- Ícone de Configurações -->
            <ImageButton
                android:id="@+id/icon_config_toolbar"
                android:src="@drawable/ic_settings"
                android:contentDescription="Configurações"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Ícone de Adicionar -->
            <ImageButton
                android:id="@+id/icon_add_toolbar"
                android:src="@drawable/ic_add_circle_outline_white"
                android:contentDescription="Adicionar"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Ícone de Notificações -->
            <ImageButton
                android:id="@+id/icon_notificacoes_toolbar"
                android:src="@drawable/notifications"
                android:contentDescription="Notificações"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>
