<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <!-- ✅ CORRIGIDO: ID alterado de tv_item_id para tv_chamado_id -->
    <TextView
        android:id="@+id/tv_chamado_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="1"
        android:textSize="14sp"
        android:textColor="@color/solveit_texto_secundario" />

    <!-- ✅ CORRIGIDO: ID alterado de tv_item_titulo para tv_chamado_titulo -->
    <TextView
        android:id="@+id/tv_chamado_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="Título do chamado aqui"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginEnd="8dp"/>

    <!-- ✅ CORRIGIDO: ID alterado de tv_item_prioridade para tv_chamado_prioridade -->
    <TextView
        android:id="@+id/tv_chamado_prioridade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Urgente"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/borda_edittext"/>

    <!-- ✅ CORRIGIDO: ID alterado de tv_item_status para tv_chamado_status -->
    <TextView
        android:id="@+id/tv_chamado_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="Aberto"
        android:gravity="end"
        android:textSize="12sp"
        android:textColor="@color/solveit_texto_secundario"
        android:lines="1"
        android:ellipsize="end"/>
</LinearLayout>
