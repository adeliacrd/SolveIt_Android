<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ListaChamadosActivity">

    <!-- 1. Barra superior com Toolbar e Abas -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetEnd="8dp"
            app:contentInsetStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_logo_solveit"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:contentDescription="Logo SolveIT"
                    android:scaleType="fitStart"
                    android:src="@drawable/solveit_logo2" />

                <!-- ================== ÍCONES DA TOOLBAR CORRIGIDOS ================== -->

                <!-- BOTÃO DE CONFIGURAÇÕES (Admin) - INVISÍVEL POR PADRÃO -->
                <ImageButton
                    android:id="@+id/ic_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Configurações do Admin"
                    android:padding="8dp"
                    android:src="@drawable/ic_settings_white"
                    android:visibility="gone"
                    tools:visibility="visible" /> <!-- tools:visibility só para vermos no editor -->

                <!-- BOTÃO DE ADICIONAR (Admin) - INVISÍVEL POR PADRÃO -->
                <ImageButton
                    android:id="@+id/ic_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Abrir Novo Chamado"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_circle_outline_white"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <ImageButton
                    android:id="@+id/ic_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notificações"
                    android:padding="8dp"
                    android:src="@drawable/notifications" />

                <ImageButton
                    android:id="@+id/ic_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Perfil do Usuário"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_white" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- TÍTULO PARA O ADMIN - INVISÍVEL POR PADRÃO -->
        <TextView
            android:id="@+id/textViewAdminTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solveit_azul_primario"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="Todos os Chamados"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Abas para o usuário normal -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solveit_azul_primario"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextAppearance="@style/App.Custom.Tabs"
            app:tabTextColor="@color/white_transparente_70"
            app:tabIndicatorFullWidth="false" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ========================================================================= -->
    <!-- ✨ ÁREA DE CONTEÚDO PRINCIPAL - SUBSTITUÍDA PELO CÓDIGO ABAIXO ✨ -->
    <!-- ========================================================================= -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Este ViewPager é para o usuário normal, com as abas -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Este RecyclerView é para a lista do admin, e começa invisível -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="120dp"
            android:visibility="gone"
            tools:listitem="@layout/item_chamado_admin"
            tools:visibility="visible"/> <!-- tools:visibility para vermos no editor -->

    </FrameLayout>


    <!-- 3. Botão Flutuante (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdicionarChamado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="Adicionar novo chamado"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/solveit_azul_primario"
        app:fabCustomSize="72dp"
        app:maxImageSize="36dp"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
