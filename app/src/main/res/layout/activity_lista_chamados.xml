<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ListaChamadosActivity">

    <!-- 1. Barra superior com Toolbar e Abas (TabLayout) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_icones"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/img_logo_solveit"
                    android:layout_width="230dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Logo SolveIT"
                    android:scaleType="fitStart"
                    android:src="@drawable/solveit_logo2" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/icon_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="false"
                    android:contentDescription="Abrir Novo Chamado"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_circle_outline_white" />

                <ImageButton
                    android:id="@+id/ic_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notificações"
                    android:padding="8dp"
                    android:src="@drawable/notifications" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Perfil do Usuário"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_white" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/solveit_azul_primario"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextAppearance="@style/App.Custom.Tabs"
            app:tabTextColor="@color/white_transparente_70"
            app:tabIndicatorFullWidth="false" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. ÁREA DE CONTEÚDO PRINCIPAL -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- CONTÊINER DA TABELA -->
        <LinearLayout
            android:id="@+id/tableContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/borda_tabela"
            android:elevation="2dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Cabeçalho -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="ID"
                    android:textColor="@color/solveit_texto_secundario" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text="Título"
                    android:textColor="@color/solveit_texto_secundario" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:gravity="center"
                    android:text="Prioridade"
                    android:textColor="@color/solveit_texto_secundario" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:gravity="end"
                    android:text="Status"
                    android:textColor="@color/solveit_texto_secundario" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Lista -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChamados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_chamado_layout" />

        </LinearLayout>

        <!-- TEXTVIEW PARA MENSAGEM DE LISTA VAZIA -->
        <TextView
            android:id="@+id/textViewEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nenhum chamado a ser exibido"
            android:textColor="@color/solveit_texto_secundario"
            android:textSize="16sp"
            android:visibility="visible"
            tools:visibility="gone" />

    </FrameLayout>

    <!-- 3. Botão Flutuante (FAB) com Posição Ajustada -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdicionarChamado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:contentDescription="Adicionar novo chamado"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/solveit_azul_primario"
        app:fabCustomSize="72dp"
        app:maxImageSize="36dp"
        app:tint="@android:color/white"


    android:layout_marginEnd="32dp"
    android:layout_marginBottom="48dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
