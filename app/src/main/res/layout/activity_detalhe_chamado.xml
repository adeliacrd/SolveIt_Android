<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".DetalheChamadoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solveit_azul_primario"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_icones"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/img_logo_solveit"
                    android:layout_width="230dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Logo SolveIT"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_solveit_logo" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/icon_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="false"
                    android:contentDescription="Abrir Novo Chamado"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_circle_outline_white" />

                <ImageButton
                    android:id="@+id/ic_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notificações"
                    android:padding="8dp"
                    android:src="@drawable/notifications" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Perfil do Usuário"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_white" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Informações"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="98dp"
                    android:background="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="250dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <ImageButton
                    android:id="@+id/btn_voltar"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Voltar"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_arrow_back_grey" />

                <TextView
                    android:id="@+id/tv_detalhe_titulo_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/solveit_texto_primario"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Chamado (ID 00)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/tv_detalhe_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Em Atendimento"
                    android:textColor="@color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/borda_edittext"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_detalhe_prioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Urgente"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/borda_edittext"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detalhe_titulo_completo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Título do chamado"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_grey"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_detalhe_solicitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Solicitante: NomeUsuario\nnomeusuario@nomeempresa.com"
                    android:textColor="#616161"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_grey"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_detalhe_agente"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="Agente: NomeAgente\nnomeagente@nomeempresa.com"
                    android:textColor="#616161"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/tv_detalhe_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    tools:text="0d 00h 00m"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/borda_edittext"
                    android:layout_marginEnd="8dp"
                    app:drawableStartCompat="@drawable/ic_clock"
                    app:drawableTint="@color/white"
                    android:drawablePadding="4dp"/>

                <TextView
                    android:id="@+id/btn_sla"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:minWidth="50dp"
                    android:gravity="center"
                    android:text="SLA"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/borda_edittext"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/layout_acoes_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#F9F9F9"
        android:padding="16dp"
        android:elevation="16dp">

        <LinearLayout
            android:id="@+id/layout_responder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responder"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="4dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/borda_edittext">
                    <EditText
                        android:id="@+id/edit_resposta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:background="@android:color/white"
                        android:gravity="top|start"
                        android:hint="Escreva sua mensagem..."
                        android:padding="12dp"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|end"
                        android:background="@android:color/white"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btn_anexar_chat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Para anexar arquivos, clique aqui"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:gravity="end"
                            android:layout_marginEnd="16dp"/>

                        <Button
                            android:id="@+id/btn_enviar_resposta"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Enviar"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:background="@drawable/fundo_botao_arredondado"
                            app:backgroundTint="@color/solveit_azul_primario"
                            android:textColor="@color/white"
                            android:paddingHorizontal="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_assumir_chamado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Assumir Chamado"
                android:textAllCaps="false"
                android:background="@drawable/fundo_botao_arredondado"
                app:backgroundTint="@color/solveit_azul_primario"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_atribuir_chamado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Atribuir Chamado"
                android:textAllCaps="false"
                android:background="@drawable/fundo_botao_arredondado"
                app:backgroundTint="@color/solveit_azul_primario"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_concluir_chamado"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Concluído"
                    android:textAllCaps="false"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/fundo_botao_arredondado"
                    app:backgroundTint="#1976D2"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_cancelar_chamado"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/fundo_botao_arredondado"
                    app:backgroundTint="#D32F2F"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <Button
                    android:id="@+id/btn_encerrar_extra"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Encerrar"
                    android:textAllCaps="false"
                    android:background="@drawable/fundo_botao_arredondado"
                    app:backgroundTint="#616161"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>