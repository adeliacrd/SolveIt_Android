<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".DetalheChamadoActivity">

    <!-- 1. TOOLBAR CUSTOMIZADA (SEM ALTERAÇÕES) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solveit_azul_primario"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_icones"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/img_logo_solveit"
                    android:layout_width="230dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Logo SolveIT"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_solveit_logo" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/icon_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="false"
                    android:contentDescription="Abrir Novo Chamado"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_circle_outline_white" />

                <ImageButton
                    android:id="@+id/ic_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notificações"
                    android:padding="8dp"
                    android:src="@drawable/notifications" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Perfil do Usuário"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_white" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp">


            <LinearLayout
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Informações"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="98dp"
                    android:background="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <ImageButton
                    android:id="@+id/btn_voltar"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Voltar"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_arrow_back_grey" />

                <TextView
                    android:id="@+id/tv_detalhe_titulo_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/solveit_texto_primario"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Chamado (ID 00)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/tv_detalhe_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Em Atendimento"
                    android:textColor="@color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/borda_edittext"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_detalhe_prioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Urgente"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/borda_edittext"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detalhe_titulo_completo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Título do chamado"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_grey"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_detalhe_solicitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Solicitante: NomeUsuario\nnomeusuario@nomeempresa.com"
                    android:textColor="#616161"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_grey"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_detalhe_agente"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="Agente: NomeAgente\nnomeagente@nomeempresa.com"
                    android:textColor="#616161"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/tv_detalhe_tempo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:minWidth="120dp"
                android:gravity="center"
                android:textAlignment="center"
                tools:text="0d 00h 00m"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/borda_edittext"
                android:layout_marginEnd="8dp"
                app:drawableStartCompat="@drawable/ic_clock"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/btn_sla"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:minWidth="50dp"
                android:gravity="center"
                android:text="SLA"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:background="@drawable/borda_edittext"
                android:clickable="true"
                android:focusable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/layout_acoes_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="16dp"
        android:padding="8dp">
        <LinearLayout
            android:id="@+id/layout_responder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <EditText
                android:id="@+id/edit_resposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escreva uma resposta..."
                android:background="@drawable/borda_edittext"
                app:backgroundTint="@android:color/white"
                android:padding="12dp"
                android:minHeight="48dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Anexar arquivo"
                    android:textColor="@color/solveit_azul_primario"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"/>

                <Button
                    android:id="@+id/btn_enviar_resposta"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Enviar"
                    android:textAllCaps="false"
                    android:background="@drawable/fundo_botao_arredondado"
                    app:backgroundTint="@color/solveit_azul_primario"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_assumir_chamado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Assumir Chamado"
            android:textAllCaps="false"
            android:background="@drawable/fundo_botao_arredondado"
            app:backgroundTint="@color/solveit_azul_primario"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="gone"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>