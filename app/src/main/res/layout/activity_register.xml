<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/solveit_logo1_1"
            android:contentDescription="Logo SolveIT"
            android:layout_marginBottom="24dp"/>

        <!-- Título da Tela -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crie sua conta"
            android:textColor="@color/solveit_texto_primario"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Rótulo Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome*"
            android:textColor="@color/black"
            android:labelFor="@+id/editTextName"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Campo Nome -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:importantForAutofill="yes"
            android:background="@drawable/input_field_border"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:hint="Seu nome"
            android:textSize="12sp"/>

        <!-- Rótulo Email Corporativo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Corporativo*"
            android:textColor="@color/black"
            android:labelFor="@+id/editTextEmailCorporativo"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Campo Email Corporativo -->
        <EditText
            android:id="@+id/editTextEmailCorporativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:importantForAutofill="yes"
            android:background="@drawable/input_field_border"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:hint="seuemail@empresa.com"
            android:textSize="12sp"/>

        <!-- Rótulo Senha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha*"
            android:textColor="@color/black"
            android:labelFor="@+id/editTextPassword"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Campo Senha -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:importantForAutofill="yes"
            android:background="@drawable/input_field_border"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:hint="Crie uma senha"
            android:textSize="12sp"/>

        <!-- Rótulo Confirme a Senha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirme a senha*"
            android:textColor="@color/black"
            android:labelFor="@+id/editTextConfirmPassword"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Campo Confirme a Senha -->
        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:importantForAutofill="yes"
            android:background="@drawable/input_field_border"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:hint="Confirme sua senha"
            android:textSize="12sp"/>

        <!-- Rótulo Nome da empresa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da empresa*"
            android:textColor="@color/black"
            android:labelFor="@+id/editTextCompanyName"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>


        <!-- Campo Nome da empresa -->
        <EditText
            android:id="@+id/editTextCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:importantForAutofill="yes"
            android:background="@drawable/input_field_border"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:hint="Nome da sua empresa"
            android:textSize="12sp"/>

        <!-- Rótulo Tamanho da empresa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamanho da empresa*"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerCompanySize"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/input_field_border"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="24dp"
            android:prompt="@string/select_company_size_prompt"
            tools:listitem="@android:layout/simple_spinner_dropdown_item"/>

        <!-- ProgressBar para indicar carregamento -->
        <ProgressBar
            android:id="@+id/progressBarRegister"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/> <!-- Opcional: margem para separar do botão -->

        <!-- Botão Criar conta -->
        <Button
            android:id="@+id/buttonCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar Conta"
            android:onClick="onRegisterButtonClicked"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="16dp"
            android:textAllCaps="false"
            tools:ignore="OnClick" />

        <!-- Link para Login -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAlreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Já tem uma conta? "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewLoginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faça seu login"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
