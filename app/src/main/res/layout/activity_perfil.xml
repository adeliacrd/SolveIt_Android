<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PerfilActivity">

    <!-- Toolbar Padrão (Sem alterações) -->

    <!-- Conteúdo com Rolagem (Sem alterações) -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_padrao" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- ===================================== -->
            <!--   SEÇÃO DO AVATAR - CÓDIGO ALTERADO   -->
            <!-- ===================================== -->
            <FrameLayout
                android:id="@+id/profile_avatar_container"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <!-- Biblioteca para Imagem Circular (substitui o CardView) -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_avatar"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:src="@color/solveit_azul_primario"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/solveit_azul_primario"/>

                <!-- Ícone de Câmera com Fundo Branco -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_camera_alt"
                    android:background="@drawable/fundo_branco_circular"
                    android:padding="6dp"
                    app:tint="@color/solveit_azul_primario" />

            </FrameLayout>

            <TextView
                android:id="@+id/profile_text_cargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                tools:text="Cliente" />
            <!-- FIM DA SEÇÃO DO AVATAR -->


            <!-- Campo Nome Completo (Sem alterações) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_edit_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome Completo"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo E-mail (Sem alterações) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Telefone (Sem alterações) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_edit_telefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefone"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ===================================== -->
            <!--   SEÇÃO DE SENHA COM A ALTERAÇÃO      -->
            <!-- ===================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="24dp"
                android:text="Alterar Senha"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 1. Campo Senha Atual com o ícone corrigido -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/password_toggle_selector">  <!-- LINHA ALTERADA/ADICIONADA -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_edit_senha_atual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha Atual"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 2. Campo Nova Senha com o ícone corrigido -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/password_toggle_selector">  <!-- LINHA ALTERADA/ADICIONADA -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_edit_nova_senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite a Nova Senha"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- FIM DA SEÇÃO DE SENHA -->

            <!-- Campo Área (Sem alterações) -->
            <LinearLayout
                android:id="@+id/profile_container_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_edit_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Área (HelpDesk)"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <!-- Espaçador (Sem alterações) -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Botões de Ação (Sem alterações) -->
            <Button
                android:id="@+id/profile_button_alterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/solveit_azul_primario"
                android:text="Alterar Informações"
                android:padding="12dp"/>

            <Button
                android:id="@+id/profile_button_sair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#D32F2F"
                android:text="Sair"
                android:textColor="@android:color/white"
                android:padding="12dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
