<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".AberturaChamadoActivity">

    <!-- 1. TOOLBAR CUSTOMIZADA (SEM ALTERAÇÕES) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solveit_azul_primario"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_icones"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/img_logo_solveit"
                    android:layout_width="230dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Logo SolveIT"
                    android:scaleType="fitStart"
                    android:src="@drawable/solveit_logo2" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/icon_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="false"
                    android:contentDescription="Abrir Novo Chamado"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_circle_outline_white" />

                <ImageButton
                    android:id="@+id/ic_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notificações"
                    android:padding="8dp"
                    android:src="@drawable/notifications" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Perfil do Usuário"
                    android:padding="8dp"
                    android:src="@drawable/ic_person_white" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp">

            <ImageButton
                android:id="@+id/btn_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voltar"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abertura de Chamado"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="64dp" />

            </LinearLayout>

            <View
                android:layout_width="48dp"
                android:layout_height="0dp" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. CONTEÚDO DO FORMULÁRIO COM ROLAGEM -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- OUTROS CAMPOS DO FORMULÁRIO (SEM ALTERAÇÕES) -->
            <TextView
                style="@style/App.Form.Label"
                android:text="Título*" />
            <EditText
                android:id="@+id/edit_titulo"
                style="@style/App.Form.Input"
                android:hint="Título"
                android:inputType="textCapSentences" />

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Nome do solicitante*" />
            <EditText
                android:id="@+id/edit_nome_solicitante"
                style="@style/App.Form.Input"
                android:hint="Nome"
                android:inputType="textPersonName" />

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Prioridade*" />
            <FrameLayout
                style="@style/App.Form.Input"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">
                <Spinner
                    android:id="@+id/spinner_prioridade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </FrameLayout>

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="E-mail de contato*" />
            <EditText
                android:id="@+id/edit_email"
                style="@style/App.Form.Input"
                android:hint="seunome@suaempresa.com"
                android:inputType="textEmailAddress" />

            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Descrição*" />
            <EditText
                android:id="@+id/edit_descricao"
                style="@style/App.Form.Input"
                android:layout_height="120dp"
                android:gravity="top"
                android:hint="Escreva aqui a descrição"
                android:inputType="textMultiLine"
                android:paddingTop="16dp" />

            <!-- ========================================================================= -->
            <!-- ✨ CAMPO "ANEXAR ARQUIVO" COM A SOLUÇÃO DEFINITIVA APLICADA ✨ -->
            <!-- ========================================================================= -->
            <TextView
                style="@style/App.Form.Label"
                android:layout_marginTop="16dp"
                android:text="Anexar arquivo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/borda_edittext"
                android:orientation="horizontal">

                <!-- 1. Botão da Esquerda com Ícone '+' (sem alteração) -->
                <ImageButton
                    android:id="@+id/btn_anexar_icone"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:contentDescription="Anexar arquivo"
                    android:src="@drawable/ic_add"
                    app:tint="#616161" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D0D0D0" />

                <!-- 2. Texto do Nome do Arquivo (sem alteração) -->
                <TextView
                    android:id="@+id/text_nome_arquivo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Selecione o arquivo"
                    android:textColor="#757575"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D0D0D0" />

                <!-- 3. Botão "Escolha" (SUBSTITUÍDO POR TEXTVIEW PARA CONTROLE TOTAL) -->
                <TextView
                    android:id="@+id/btn_anexar_escolha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="90dp"
                    android:background="#E0E0E0"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Escolha"
                    android:textAllCaps="false"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- BOTÕES DE AÇÃO (SEM ALTERAÇÕES) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_confirmar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_botao_arredondado"
                    android:text="Confirmar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/solveit_azul_primario" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_botao_arredondado"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:backgroundTint="#A9A9A9" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
