<?xml version="1.0" encoding="utf-8"?>
<!-- Usamos CardView, mas removemos a elevação e arredondamento para criar um item plano,
     como no mockup, separado apenas por uma linha fina (margin de 1dp). -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?attr/selectableItemBackground"> <!-- Efeito de clique visual -->

        <!-- 1. Linha da Mensagem (Ex: NomeAgente abriu o chamado) -->
        <TextView
            android:id="@+id/text_view_mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NomeAgente abriu o chamado"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="normal" />

        <!-- 2. Linha da Data e ID (Ex: 29/04/2025 às 14h28 - Chamado ID1) -->
        <TextView
            android:id="@+id/text_view_data_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="29/04/2025 às 14h28 - Chamado ID1"
            android:textSize="14sp"
            android:textColor="#757575" />

    </LinearLayout>

    <!-- Linha Divisória Fina na parte inferior do item -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#EEEEEE" />

</androidx.cardview.widget.CardView>
