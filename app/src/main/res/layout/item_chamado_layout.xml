<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- =============================================================== -->
    <!-- PARTE COMPACTA (O SEU LAYOUT ORIGINAL, AGORA CLICÁVEL)           -->
    <!-- =============================================================== -->
    <LinearLayout
        android:id="@+id/layout_compacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <!-- Os pesos (layout_weight) e componentes são os mesmos que você já tinha -->
        <TextView
            android:id="@+id/textViewId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/solveit_texto_secundario"
            android:textSize="12sp"
            tools:text="1" />

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="Impressora travou no 2º andar" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPrioridade"
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="3.0"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/prioridade_media"
            tools:text="Média" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:gravity="end"
            android:textColor="@color/solveit_texto_secundario"
            android:textSize="12sp"
            tools:text="Novo" />
    </LinearLayout>

    <!-- =============================================================== -->
    <!-- PARTE EXPANDIDA (COMEÇA INVISÍVEL)                               -->
    <!-- =============================================================== -->
    <LinearLayout
        android:id="@+id/layout_expandido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:background="#F7F9FC"
        android:visibility="gone"
        tools:visibility="visible"> <!-- tools:visibility permite ver no preview -->

        <!-- Linha do Título Detalhado, Tempo e SLA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/expandido_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/solveit_texto_primario"
                android:textStyle="bold"
                tools:text="Chamado (ID 01)" />

            <TextView
                android:id="@+id/expandido_sla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="#DCDCDC"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="SLA"
                android:textColor="@color/solveit_texto_secundario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/expandido_tempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/expandido_sla"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="#388E3C"
                android:textStyle="bold"
                app:drawableTint="#388E3C"
                tools:text="0d 03h 45m" />

        </RelativeLayout>

        <TextView
            android:id="@+id/expandido_subtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Título do chamado" />

        <TextView
            android:id="@+id/expandido_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="29/04/2025 às 16h32" />

        <!-- Linha com Iniciais, Nome e Descrição -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expandido_iniciais"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/fundo_circulo_azul"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="NC" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/expandido_nome_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="NomeCliente | Descrição" />

                <TextView
                    android:id="@+id/expandido_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="A impressora da marca X, modelo Y, está com a luz piscando e não puxa o papel da bandeja. Já reiniciei e o problema persiste." />
            </LinearLayout>
        </LinearLayout>

        <!-- Botão de Ação -->
        <Button
            android:id="@+id/button_ir_para_chamado"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ir para o chamado"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/solveit_azul_primario" />
    </LinearLayout>

    <!-- Linha divisória entre os itens da lista -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

</LinearLayout>
