<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- LinearLayout para agrupar os filtros e a lista -->
    <LinearLayout
        android:id="@+id/conteudo_principal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botoes_layout">

        <!-- Filtro Dropdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar por"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <!-- ✅ REVERTIDO: Voltando para o estilo original do Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/spinner_filtro_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Status do contato"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de Pesquisa -->
        <!-- ✅ REVERTIDO: Voltando para o estilo original da Caixa de Texto -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:endIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pesquisar_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pesquisar" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Lista de Usuários (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_usuarios"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_usuario"/>
    </LinearLayout>

    <!-- LinearLayout para agrupar os botões na parte inferior -->
    <LinearLayout
        android:id="@+id/botoes_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botão Confirmar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmar_edicao"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="CONFIRMAR"
            android:backgroundTint="@color/azul_botao"
            app:cornerRadius="20dp" />

        <!-- Botão Cancelar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancelar_edicao"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:textColor="@color/cinza_claro"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/cinza_fundo_botao" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
