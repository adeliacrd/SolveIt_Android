<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout_interacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="start">

    <!-- AVATAR (Usando CardView para ser redondo) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/solveit_azul_primario"> <!-- Cor de fundo padrão -->

        <!-- 1. TEXTO (Iniciais) - Visível por padrão -->
        <TextView
            android:id="@+id/tv_avatar_initials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="NC"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 2. IMAGEM (Foto) - Escondida por padrão (GONE) -->
        <!-- O Java vai torná-la VISIBLE se o usuário tiver foto -->
        <ImageView
            android:id="@+id/img_avatar_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <!-- CONTEÚDO (Cabeçalho + Balão) - IGUAL AO ANTERIOR -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_autor_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="NomeUsuario | 29/04 às 15h30"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:id="@+id/box_mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_balao_outro"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Esta é a mensagem do chamado..."
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>