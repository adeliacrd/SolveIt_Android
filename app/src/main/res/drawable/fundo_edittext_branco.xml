<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo sólida -->
    <solid android:color="@android:color/white" />

    <!-- Raio dos cantos (usei 8dp como um valor padrão, ajuste se necessário) -->
    <corners android:radius="8dp" />

    <!-- Borda (opcional, mas ajuda a definir os limites do campo) -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" /> <!-- Cor cinza para a borda -->

</shape>
